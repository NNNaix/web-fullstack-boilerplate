{
    "name": "react-pro-boilerplate",
    "version": "1.0.0-alpha",
    "description": "a professional react boilerplate.",
    "main": "index.js",
    "repository": "https://github.com/NNNaix/react-pro-boilerplate.git",
    "author": {
        "name": "Pengcheng Geng",
        "url": "https://github.com/NNNaix",
        "email": "nnnaix@163.com"
    },
    "private": true,
    "scripts": {
        "dev": "yarn run dev:web && yarn run dev:node",
        "dev:web": "cross-env-shell NODE_ENV=development ts-node --files -P ./scripts/webpack/tsconfig.json -r tsconfig-paths/register ./scripts/webpack/commands/startDev.ts --open",
        "dev:node": "cross-env-shell NODE_ENV=development TS_NODE_FILES=true TS_NODE_PROJECT=./server/tsconfig.json node --inspect=5858  -r ts-node/register  -r tsconfig-paths/register -r source-map-support/register ./server/index.ts",
        "dev:watch-node": "nodemon",
        "prod": "cross-env NODE_ENV=production node dist/server.js",
        "build": "yarn run build:web && yarn run build:node",
        "build:web": "cross-env-shell NODE_ENV=production ts-node --files -P ./scripts/webpack/tsconfig.json -r tsconfig-paths/register ./scripts/webpack/commands/buildWeb.ts",
        "build:node": "cross-env-shell NODE_ENV=production ts-node --files -P ./scripts/webpack/tsconfig.json -r tsconfig-paths/register ./scripts/webpack/commands/buildNode.ts",
        "build:analyze": "yarn build --analyze",
        "test": "jest",
        "lint": "yarn run lint:eslint && yarn run lint:stylelint",
        "lint:eslint": "eslint -c .eslintrc.js --ext /*.js public/app/**/*.{ts,tsx} {server,scripts}/**/*.ts",
        "lint:stylelint": "stylelint --config .stylelintrc.json public/sass/*.{css,less,scss}",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && yarn check --integrity",
            "commit-msg": "commitlint -c .commitlintrc.js -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint -c .eslintrc.js"
        ],
        "*.{css,less,scss}": [
            "stylelint --config .stylelintrc.json"
        ],
        "*.{ts,tsx,js,json,html,yml,css,less,scss,md}": [
            "prettier --write"
        ]
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "server"
        ],
        "exec": "yarn run dev:node",
        "ext": "ts"
    },
    "engines": {
        "node": "^12.16.1",
        "npm": "^6.13.4"
    },
    "browserslist": [
        "last 2 versions",
        "Firefox ESR",
        "> 1%",
        "ie >= 10"
    ],
